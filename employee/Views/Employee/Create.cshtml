@model employee.Models.EmployeeFormViewModel

<div class="container mt-5">
    <h2 class="mb-4">Employee Registration Form</h2>

    <form id="employeeForm" method="post" @* class="needs-validation" novalidate *@>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Employee.EmployeeID" />
        <input type="hidden" asp-for="Experience.EmployeeID" />
        <input type="hidden" asp-for="Experience.ExperienceID" />

        <div class="mb-3">
            <h4>Employee Info</h4>

            <div class="form-group mb-2">
                <label asp-for="Employee.Name"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Employee.Age"></label>
                <input asp-for="Employee.Age" class="form-control" />
                <span asp-validation-for="Employee.Age" class="text-danger">  </span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Employee.Gender"></label>
                <select asp-for="Employee.Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Employee.Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Employee.Contact"></label>
                <input asp-for="Employee.Contact" class="form-control" />
                <span asp-validation-for="Employee.Contact" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <h4>Experience Info</h4>

            <div class="form-group mb-2">
                <label asp-for="Experience.Department"></label>
                <select asp-for="Experience.Department" class="form-control">
                    <option value="">-- Select Department --</option>
                    <option value="IT">IT</option>
                    <option value="DevOps">DevOps</option>
                    <option value="Sales">Sales</option>
                    <option value="Management">Management</option>
                </select>                
                <span asp-validation-for="Experience.Department" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Experience.Years"></label>
                <input asp-for="Experience.Years" class="form-control" />
                <span asp-validation-for="Experience.Years" class="text-danger"></span>
            </div>
        </div>
    </form>

    <button type="button" id="submitButton" class="btn btn-primary">Submit</button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        $(document).ready(function () {
            $('#submitButton').on('click', function () {

                      var form = $('#employeeForm');

                    if (!form.valid())  {  return;  }

                // var form = $('#employeeForm');
                // var modelData  = form.serialize();

                        var employeeId = $('#Employee_EmployeeID').val();
                        var name = $('#Employee_Name').val();
                        var age = $('#Employee_Age').val();
                        var gender = $('#Employee_Gender').val();
                        var contact = $('#Employee_Contact').val();

                        var experienceid = $('#Experience_ExperienceID').val()
                        var department = $('#Experience_Department').val();
                        var years = $('#Experience_Years').val();


                    var modelData = {
                    Employee: {
                        EmployeeID: employeeId,
                        Name: name,
                        Age: age,
                        Gender: gender,
                        Contact: contact
                    },
                    Experience: {
                        ExperienceID: experienceid,
                        EmployeeID: employeeId,
                        Department: department,
                        Years: years
                    } 
            };
              

                $.ajax({
                    url: '/Employee/Create',
                    type: 'POST',
                    data: modelData ,
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (result) {
                        alertify.success("Employee created successfully!");
                        form[0].reset(); 
                        $('.text-danger').text("");
                         window.location.href = '/Employee/List';

                    },
                    error: function (xhr) {
                        if (xhr.status === 400 && xhr.responseJSON) {
                            const errors = xhr.responseJSON;
                            $('.text-danger').text(""); 

                            for (const key in errors) {
                                const errorSpan = $(`[data-valmsg-for="${key}"]`);
                                errorSpan.text(errors[key][0]);
                            }

                            alertify.error("Validation failed.");
                        } else {
                            alertify.error("Something went wrong!");
                        }
                    }
                });
            });
        });



    </script>
}
